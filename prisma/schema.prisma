generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  firstName String?
  lastName  String?
  company   String?
  phone     String?
  password  String
  createdAt DateTime  @default(now())
  projects  Project[] @relation("OwnerProjects")
}

model Client {
  id           Int       @id @default(autoincrement())
  name         String
  contactEmail String?
  phone        String?
  projects     Project[]
  createdAt    DateTime  @default(now())
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  client      Client?  @relation(fields: [clientId], references: [id])
  clientId    Int?
  owner       User?    @relation("OwnerProjects", fields: [ownerId], references: [id])
  ownerId     Int?
  createdAt   DateTime @default(now())
}
